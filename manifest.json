{
  "name": "Chrome Tab Predictor",
  "version": "0.0.1",
  "manifest_version": 2,
  "author": "Lawrence Pang and Nicholas Vadivelu",
  "description": "Automatically predicts what website you want to visit when you open a new tab.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [ "synaptic.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "history",
    "tabs",
	"storage"
  ]
}